<?xml version="1.0"?>
<layout version="0.1.0">
    <default translate="label" module="page">
        <reference name="head">
            <action method="addCss"><stylesheet>css/slider/slider.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/slider/jquery-1.6.4.min.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/slider/jquery.jcarousel.js</name></action>                          
        </reference>
    </default>
    <slider_index_index>
        <reference name="content">
            <block type="slider/slider" name="slider" template="slider/slider.phtml" />
        </reference>
    </slider_index_index>
</layout>